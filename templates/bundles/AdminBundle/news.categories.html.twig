{% extends 'bundles/AdminBundle/layout.html.twig' %}

{% block title %}Symfony News Demo - Admin / Categories{% endblock %}

{% block body %}
    <div class="d-flex flex-flow-column justify-content-start align-items-start">
        <div class="row">
            <button
                    type="button"
                    id="add-category-modal-btn"
                    class="btn btn-primary"
                    data-add-url="{{ path('admin.news.categories.add') }}"
            >Add category</button>
        </div>
        <div class="row">
            <h1>Categories</h1>
        </div>
        <div class="row d-flex justify-content-start align-items-start gap-5"
             id="news-categories-container"
             data-delete-url="{{ path('admin.news.categories.delete', {'id': 0}) }}"
             data-update-url="{{ path('admin.news.categories.update', {'id': 0}) }}"
        >
            {% for category in categories %}
                <span class="badge badge-info" data-id="{{ category.id }}">
                    <span class="category-title">{{ category.title }}</span>
                    <input type="text" class="edit-category-input"value="{{ category.title }}">
                    <i class="fa fa-pencil edit-category-btn"></i>
                    <i class="fa fa-check save-category-btn"></i>
                    <i class="fa fa-times cancel-edit-category-btn"></i>
                    <i class="fa fa-trash-o delete-category-btn"></i>
                </span>
            {% endfor %}
        </div>
    </div>

    <div class="card modal" id="add-category-modal">
        <div class="modal-content">
            <h3 class="d-flex justify-content-between align-items-center">
                <span>Add category</span>
                <span class="modal-close-button">&times;</span>
            </h3>
            <form>
                <div class="form-group mt-0">
                    <label for="title">Title:</label>
                    <input type="text" name="title" class="flex-grow-1" id="add-category-title"/>
                </div>
            </form>
            <div class="modal-buttons">
                <button type="button" class="btn btn-secondary modal-close-button">Close</button>
                <button type="button" class="btn btn-primary modal-save-button">Add</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/AdminBundle/news-category.js') }}"></script>
{% endblock %}